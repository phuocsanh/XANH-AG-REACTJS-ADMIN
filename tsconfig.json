{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2015", "es2017", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", // Sử dụng react-jsx thay vì preserve
    "incremental": true,
    "target": "es2017",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "declarations.d.ts"],
  "exclude": ["node_modules"]
}
